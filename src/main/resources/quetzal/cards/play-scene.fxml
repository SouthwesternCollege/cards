<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<HBox alignment="CENTER" spacing="0.0" style="-fx-background-color: green;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="quetzal.cards.PlayController">
    <children>
        <VBox fx:id="info" opacity="0.6" prefHeight="1080" prefWidth="480" style="-fx-background-color: black;">
            <children>
                <Pane prefHeight="200.0" prefWidth="200.0" />
                <Pane prefHeight="200.0" prefWidth="200.0" />
            </children>
        </VBox>
        <VBox fx:id="playArea" opacity="0.2" prefHeight="1080" prefWidth="1440" style="-fx-padding: 40; -fx-spacing: 40;">
            <children>
                <Pane fx:id="playedHands" prefHeight="360" prefWidth="200.0" style="-fx-background-color: black; -fx-background-radius: 25; -fx-opacity: 1; -fx-border-width: 3;" />
                <Pane fx:id="playedHand" prefHeight="360" prefWidth="200.0" style="-fx-background-color: black; -fx-background-radius: 25; -fx-opacity: 1; -fx-border-width: 3;" />
                <Pane fx:id="hand" prefHeight="360" prefWidth="200.0" style="-fx-background-color: black; -fx-background-radius: 25; -fx-opacity: 1; -fx-border-width: 3;" />
            </children>
        </VBox>
    </children>
</HBox>
